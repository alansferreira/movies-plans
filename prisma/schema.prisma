generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:example@localhost:3306/movies?allowPublicKeyRetrieval=true&useSSL=false"
}

model User {
  username    String    @id
  password    String?   /// @encrypted:hash(password)?algorithm=sha512
  recover_code String?  @unique /// @encrypted:hash(recover_code)?algorithm=sha512 @map("recover_code")
}

model Plan {
  name   String  @id
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  version String
}

model Subscription {
  id              String   @db.VarChar(36)  @id @default(uuid())
  username        String   
  plan_name       String

  @@unique([username, plan_name])
}

model Genre {
  name   String  @id
}

model PlanGenre {
  id              String   @db.VarChar(36)  @id @default(uuid())
  genre_name      String   
  plan_name       String

  @@unique([genre_name, plan_name])
}
